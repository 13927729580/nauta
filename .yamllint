extends: default

ignore: |
  /.venv
  /applications/old_experiment-service/
  /applications/cli/draft/packs/*/charts/
  /k8s-features/charts
  /platform-deploy/charts/
  /*/charts
  /**/charts
  /tools/finalizers/dls4e/dls4e-registry
  /dls4e-charts
  /dls4e-user
  /dls4e-registry-charts
  /platform-charts
  /tmp-go

rules:
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
  comments:
    require-starting-space: false
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start:
    # Ignore all files with vaults and symlink
    ignore: |
      /toolbox/scm/group_vars/all/github.yml
      /toolbox/scm/group_vars/all/github-ff.yml
  empty-lines:
    max-end: 1
  line-length:
    max: 160
    level: warning
    ignore: |
      /jenkins/group_vars/all/dev-users.yml
  truthy: disable
